{
    "keyboard": "cradio",
    "converter": "kb2040",
    "config": {
        "features": {
            "rgb_matrix": true
        },
        "rgb_matrix": {
            "driver": "ws2812",
            "led_count": 2,
            "split_count": [1, 1],
            "timeout": 180000
        },
        "ws2812": {
            "driver": "vendor",
            "pin": 17
        },
        "split": {
            "transport": {
                "sync": {
                    "indicators": true,
                    "layer_state": true,
                    "modifiers": true
                },
                "watchdog": true,
                "watchdog_timeout": 3500
            },
            "usb_detect" :{
                "enabled": true,
                "timeout": 3000
            }
        }
    },
    "keymap": "filterpaper",
    "layout": "LAYOUT_34key_w",
    "layers": [
        [ "HRM(BASE)" ],
        [ "HRM(COLE)" ],
        [ "SYMB" ],
        [ "NUMB" ],
        [ "FUNC" ]
    ]
}
